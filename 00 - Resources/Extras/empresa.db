START TRANSACTION;
CREATE TABLE IF NOT EXISTS empleados (
    ID INT AUTO_INCREMENT,
    NOMBRE VARCHAR(255),
    APELLIDO VARCHAR(255),
    EMAIL TEXT NOT NULL,
    POSICION VARCHAR(255),
    ESPECIALIDAD VARCHAR(255),
    PRIMARY KEY (ID)
);
CREATE TABLE IF NOT EXISTS clientes (
    ID INT AUTO_INCREMENT,
    NOMBRE_EMPRESA TEXT,
    CONTACTO TEXT,
    EMAIL TEXT NOT NULL,
    SECTOR VARCHAR(255),
    PRIMARY KEY (ID)
);
CREATE TABLE IF NOT EXISTS proyectos (
    ID INT AUTO_INCREMENT,
    NOMBRE_PROYECTO TEXT,
    ID_CLIENTE INT,
    FECHA_INICIO DATE,
    FECHA_FIN DATE,
    ESTADO VARCHAR(255),
    DURACION INT,
    PRIMARY KEY (ID),
    FOREIGN KEY (ID_CLIENTE) REFERENCES clientes(ID)
);
CREATE TABLE IF NOT EXISTS herramientas (
    ID INT AUTO_INCREMENT,
    NOMBRE TEXT,
    TIPO VARCHAR(255),
    DESCRIPCION TEXT,
    PRIMARY KEY (ID)
);
CREATE TABLE IF NOT EXISTS incidentes (
    ID INT AUTO_INCREMENT,
    ID_CLIENTE INT,
    FECHA DATE,
    TIPO_INCIDENTE VARCHAR(255),
    DESCRIPCION TEXT,
    RESUELTO BOOLEAN,
    COSTO_RECUPERACION DECIMAL(10, 2),
    PRIMARY KEY (ID),
    FOREIGN KEY (ID_CLIENTE) REFERENCES clientes(ID)
);
